<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: "Rubik", sans-serif;
            color: #111;
            background-color: #fffdf2;
        }

        .menu-container {
            margin-bottom: 30px;
        }

        .category-title {
            padding: 20px;
            background-color: #538fd0ad;
            color: #0b0b0b;
            background: linear-gradient(145deg, #e6e4da, #ffffff);
            box-shadow: 6px 6px 10px #cfcdc4, -6px -6px 10px #ffffff;
            font-family: "Rubik", sans-serif;
            font-weight: 700;
            cursor: pointer;
        }

        .menu-dropdown {
            display: none;
            padding: 20px;
            background: linear-gradient(300deg, #13076c0c, #705ff41e);
            color: #090909;
            font-size: 30px;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
        }

        .menu-item:last-child {
            border-bottom: none;
        }

        .menu-item span {
            flex: 1;
        }

        .menu-item button {
            padding: 8px 16px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .menu-item button:hover {
            background-color: #218838;
        }

        .head {
            font-family: "Dancing Script", cursive;
        }

        /* Responsive Styling */
        @media (max-width: 576px) {
            .category-title {
                font-size: 18px;
            }
            .menu-dropdown {
                font-size: 16px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mb-4 head">Menu</h1>
        <% categories.forEach(category=> { %>
        <div class="row">
            <div class="col">
                <div class="menu-container">
                    <h2 class="category-title mb-0">
                        <%= category %> <i class="fas fa-chevron-down"></i>
                    </h2>
                    <div class="menu-dropdown">
                        <% allmenu.filter(menu=> menu.category === category).forEach(menu => { %>
                        <div class="menu-item">
                            <span>
                                <%= menu.name %>
                            </span>
                            <span>Price: <%= menu.price %></span>
                            <button class="btn btn-success">Add to Cart</button>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        // JavaScript to handle dropdown functionality
        const categoryTitles = document.querySelectorAll('.category-title');

        categoryTitles.forEach(title => {
            title.addEventListener('click', () => {
                const dropdown = title.nextElementSibling;
                dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
            });
        });
    </script>
</body>

</html>
